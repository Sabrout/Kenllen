        	<form action="" method="" role="search">
            	<input id="search-bar" placeholder="Search our website&hellip;">
            </form>
        </div>
    </div>
	 <div class="container">
        <div class="nav-bar ">
        	<img id="logo" src="assets/logo.png" alt="Knellen" href="">
          	<a href="shop/index" class="toggle-search">Home</a>
          	<a href="#" class="toggle-search">About Us</a>
          	<a href="#" class="toggle-search">Shops</a>
        	<a href="javascript:;" class="toggle-search">Search</a>
          	<a href="#" class="toggle-search">Cart</a>
        </div>
    </div>
</header>
<img src="assets/HomeImage.jpg" alt="">

<!-- flash that appears after editing or deleting a shop  -->
<% if !flash[:notice].blank? %>
  <div class = "notice">
    <%= flash[:notice] %>
  </div>
<% end %>	
</body>


<%= yield %>


<footer id="footer" class = "footer">Knellen Project by Â©WonderCode</footer>
</html>
