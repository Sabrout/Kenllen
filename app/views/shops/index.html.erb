<div class="subjects index">
  <h2 class= "pagetitle">Shops</h2>
  <div class = "add">
  <!-- Check if user is logged in in order to create a shop -->
  <% if user_signed_in?%>
  <%= button_to("Add New Shop", {:action => 'new'}, :class => 'button') %>
  <%end%>
  </div>
  <div class = "page">
    <% @shops.each do |shop| %>
    <div class ="shop-card">
      <div class = "shop">
      <img src="<%= shop.cover_url.to_s %>" style="width:200px;height:200px"></div>
      <div><%= shop.id %></div>
      <div><%= shop.shop_name %></div>
      <div class="actions">
        <%= link_to("Show", {:action => 'show', :id => shop.id}, :class => 'actionshow') %> |
        <%= link_to("Edit", {:action => 'edit', :id => shop.id}, :class => 'actionedit') %> |
        <%= link_to("Delete", {:action => 'delete', :id => shop.id}, :class => 'actiondelete') %>      
        </div>
    </div>
    <% end %>
  </div>
</div>