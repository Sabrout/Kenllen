<div class="subjects index">
  <div class= "pagetitle">Shops</div>
  <div class = "add">
  <!-- Check if user is logged in in order to create a shop -->
    <% if user_signed_in?%>
      <%= button_to("Create New Shop", {:action => 'new'}, :class => 'button') %><br/>
    <%end%>
    <%= form_tag :action => 'search', :method => 'get' do %>
       <%= text_field_tag :query, params[:query] %>
       <%= submit_tag "Search", :name => nil %>
    <% end %>
  </div>

  <div>
    
  </div>

  <!-- Shops showcase -->
  <div class = "page">
    <% @shops.each do |shop| %>
    <div class ="shop-card">
      <div class = "shop">
      <img src="<%= shop.cover_url.to_s %>" style="width:200px;height:200px"></div>
      <div><%= shop.id %></div>
      <div><%= shop.shop_name %></div>
        <div class="actions">
         <%= link_to("Show", {:action => 'show', :id => shop.id}, :class => 'actionshow') %>
        </div>
    </div>
    <% end %>
  </div>
</div>