<%= link_to("<< Back to List", {:action => 'index'}) %>

<div>
<h2>Edit Shop "<%= @shop.shop_name %>"</h2>

<%= form_for(:shop, :url => {:action => 'update', :id => @shop.id}) do |f| %>

	<table> 
	<tr>
		<th>Shop Name</th>
		<td><%= f.text_field(:shop_name) %></td>
	</tr>
	<tr>
		<th>Shop Description</th>
		<td><%= f.text_field(:shop_desc) %></td>
	</tr>
	<tr>
		<th>Shop Cover</th>
		<td><%= f.file_field(:cover) %></td>
	</tr>
	</table>

	<div>
		<%= submit_tag("Update Shop") %>
	</div>

	<% end %>
</div>