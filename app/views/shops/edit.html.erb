<!-- back button -->
<%= link_to("<<", {:action => 'index'}, :class => 'back') %>


<div class ="create">
<h2>Edit Shop "<%= @shop.shop_name %>"</h2>
<!-- edit the selected shop -->
<%= form_for(:shop, :url => {:action => 'update', :shop_id => @shop.shop_id}) do |f| %>

	<table> 
	<tr>
		<th>Shop Name</th>
		<td><%= f.text_field(:shop_name) %></td>
	</tr>
	<tr>
		<th>Shop Description</th>
		<td><%= f.text_field(:shop_desc) %></td>
	</tr>
	<tr>
		<th>Shop Cover</th>
		<td><%= f.file_field(:cover) %></td>
	</tr>
	</table>

	<div>
		<%= submit_tag("Update Shop", :class => 'button') %>
	</div>

	<% end %>
</div>