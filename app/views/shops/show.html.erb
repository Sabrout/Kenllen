<div class = "show-shop">
  <div class = "shop-name"><%= @shop.shop_name %></div>
<!--     <h4>Shop Description</h4>
    <div><%= @shop.shop_desc %></div> -->
    
    <div>
    <!-- This is the shop cover image. Can either use image_tag function or the good old html. I used html for css image resizing -->

      <img src="<%= @shop.cover_url.to_s %>" style="width:200px;height:200px" class = "shop-image"> 
      
    </div>
    
    <div class = "add1">
    <%= button_to("Follow Shop", {:action => 'follow'}, :class => 'shop-button') %> </div>
    <div class = "add1">
  <%= button_to("Add New Item", {:controller => 'item', :action => 'new', :id => @shop.id}, :class => 'shop-button') %>
  </div>
  </div>

  <div class = "page">
    <% @item.each do |item| %>
    <div class ="shop-card2">
      <div class="screen">
       <!-- This slider moves on hover --> 
       <div class="slider">
          <!-- Section 1 -->
           <div class="header1">>
              <% if item.item_attachments.first %>
          <%= image_tag item.item_attachments.first.photo_url, :size => "150x150" %>
        <% end %>
        </div>
        <!-- Section 2 -->
        <div class="header2">
           <div class="actions2">
        <%= link_to "Show", {:controller => 'item', :action => 'show', :id => item.id}, :class => 'actionshow' %> </div>
            <div class="actions2"> <%= link_to "Edit", {:controller => 'item', :action => 'edit', :id => item.id}, :class => 'actionedit' %>  </div>
           <div class="actions2">  <%= link_to "Delete", {:controller => 'item', :action => 'delete', :id => item.id, :shop_id => @shop.id}, :class => 'actiondelete' %> </div>    
        
        </div>
    </div>
</div>
     <p class="art-name"> <%= item.item_name %> </p>
    </div>
    <% end %>
  </div>




