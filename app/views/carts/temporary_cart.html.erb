<html>
<body>
	
<div class="content-helper"><!--Big Container-->
	<h2 class="mainbox-cart-title"> <!--CART TITLE-->
		<span class="float-left">&nbsp;</span>
		<span class="float-right">&nbsp;</span>
		Your Shopping Cart 
	</h2>
		<%if @cart.empty?%><!--checks if the cart is empty-->
			<div class="clear item-body">
				 <p class="empty-cart"> Your Cart Is Empty </p>
			</div>	
		<%end%>
		<%@cart.each do |cart_item|%><!--List All Cart Items-->
		<div class="clear item-body">
			<div class="item-image">
				<a href="https://www.cs-cart.com/facebook-store.html">
					<img class=" " src="https://www.cs-cart.com/images/thumbnails/5/120/facebook_store_product_v1.png" width="120" alt="" border="0">
				</a>
			</div>
				<label class="item-label">Item Name: </label>
					<label class="item-title"><%=cart_item[1][0]%></label>
					<br>
					<%= form_for :cart , :url => { :controller => 'Carts' , :action => "update_quantity" , :cart_item_id => cart_item[0] } do |f|%>
					<label class="item-label">Quantity:</label><%= f.text_field :quantity , class:'text-field' , value: cart_item[1][1] %> x <span>$<%=cart_item[1][3]%></span> = <span class="price">$</span><span class="price">
								<%= cart_item[1][5] %>
								</span>
	<!--Update Button--><%= f.submit 'Update' , class: 'cart-button-update'%>
						<%end%>
	<!--Delete Button--><%=button_to 'Delete' ,{controller: 'Carts' , action: 'remove_item' , cart_item_id: cart_item[0]}, class: 'cart-button-delete' , method: :delete%>

<!--Item Description-->	<label class="item-label">Description: </label>
						<span class="item-desc"><%= cart_item[1][2]%></span>
						<br>
	<!--Item Quantity--><label class="item-label">Quantity In Stock: </label>
						<span class="price"><%= cart_item[1][4]%></span>
		</div>
		<hr>
		<%end%>
<%if !@cart.empty?%>
	<div class="cart-footer-buttons clear">
		<div class="float-left">
			<%= button_to 'Clear Cart' , {action: :destroy} ,  method: :delete , class: 'cart-button'%>
			<!--CLEAR BUTTON-->
		</div>
		<div class="float-left">
			<%=button_to 'Continue Shopping' ,root_path , class: 'cart-button' , method: :get%><!-- Continue BuTTON -->
		</div>
			<div class="total-price"><!--Total Price-->
				<strong>Total cost:</strong><span class="price">$</span><span class="price"><%=@totalPrice%></span>
		</div>

		<div class="float-right"><!-- Put to the right -->
			<span class="cart-button "><a>Checkout</a></span> <!-- CHECKOUT BuTTON -->
		</div>
	</div>

<%end%>	


</div>

</body>
</html>