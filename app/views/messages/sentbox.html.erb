<div class ="h1"> <h1> <%= current_user.fname %>'s Inbox </h1></div>
<div class = "buttons">
<div><%= button_to 'Compose New', compose_path , :class=> 'button'%> </div> 
<div><%= button_to 'Inbox', inbox_path , :class=> 'button'%> </div>
<div><%= button_to 'Trash', '#' , :class=> 'button'%> </div>
</div>
<table class = "table">
	<tr>
		<td class = "td">Recipient</td>
		<td class = "td">Subject</td>
		<td class = "td-message">Message</td>
	</tr>
	<!-- Loop over all messages and show recipient's name then the subject then the body -->
	<% current_user.sent_messages.each do |m| %>
	<tr>
	<% @current_message = m %>
		<td class = "txt">
			<%= m.to.uname  %>
		</td>
		<td class = "txt">
			<%= m.topic %>
		</td>
		<td class = "txt">
			<%= m.body %>
		</td>
	</tr>
	<% end %>
</td>
</tr>
</table>