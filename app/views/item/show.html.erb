

<div class="create">
	<h2>Show Item</h2>

	<table summary="Item detail view">
		<tr>
			<th>Name</th>
			<td><%= @item.item_name %></td>
		</tr>
		<tr>
			<th>Price</th>
			<td><%= @item.price %></td>
		</tr>
		<tr>
			<th>Description</th>
			<td><%= @item.description %></td>
		</tr>
		<tr>
			<th>Inspiration</th>
			<td><%= @item.inspiration %></td>
		</tr>
		<tr>
		<td><%= button_to 'Add to Cart', cart_items_path(item_id: @item) %></td>
		</tr>
	</table>
</div>