

<div class="create">
	<h2>Show Item</h2>

	<table summary="Item detail view">
		<tr>
			<th>Name</th>
			<td><%= @item.item_name %></td>
		</tr>
		<tr>
			<th>Price</th>
			<td><%= @item.price %></td>
		</tr>
		<tr>
			<th>Description</th>
			<td><%= @item.description %></td>
		</tr>
		<tr>
			<th>Inspiration</th>
			<td><%= @item.inspiration %></td>
		</tr>
		<tr>
			<th>Category</th>
			<td><%= @item.category %></td>
		</tr>
		<tr>
			<% @item_attachments.each do |p| %>
 		 		<%= image_tag p.photo_url, :size => "150x150" %>
  				<%= link_to "Destroy", p, method: :delete %>
			<% end %>
		</tr>
	</table>
</div>