<%= link_to("<< Back To List", {:action => 'index'}, :class => 'back-link') %>

<div class="create">
	<h2>Update Item</h2>

	<%= form_for(:item, :url => {:action => 'update', :id => @item.id}) do |f| %>
	
	<table summary="Item form fields">
		<tr>
			<th>Name</th>
			<td><%= f.text_field(:item_name) %></td>
		</tr>
		<tr>
			<th>Price</th>
			<td><%= f.text_field(:price) %></td>
		</tr>
		<tr>
			<th>Description</th>
			<td><%= f.text_field(:description) %></td>
		</tr>
		<tr>
			<th>Inspiration</th>
			<td><%= f.text_field(:inspiration) %></td>
		</tr>
		<tr>
			<th>Delete Images</th>
			<td>
				<% @item_attachments.each do |p| %>
 		 			<%= image_tag p.photo_url, :size => "150x150" %>
  					<%= link_to "Delete", {:action => 'destroyImage', :id => @item.id, :attachment_id => p.id} %>
				<% end %>
			</td>
		</tr>
		<tr>
			<th>Add Images</th>
			<td>
			<%= f.fields_for :item_attachments do |i| %>
     			<div class="field">
       				<%= i.file_field :photo, :multiple => true, name: "item_attachments[photo][]" %>
     			</div>
   			<% end %>
   			</td>
		</tr>
	</table>

	<div class="form-button">
		<%= submit_tag("Update Item", :class => 'button') %>
	</div>

	<% end %>
</div>