  <!-- Shops showcase -->
  <div class = "page">
  <div class = "show-shop">
    <div class = "add2">  
    <div class = "add1">
    <h2> <%= current_user.fname%> </h2>
    <h2> <%= current_user.lname%> </h2>
     <%= button_to("Create New Shop", {:action => 'new', :controller => '/shops'}, :class => 'shop-button') %>
   </div>
  </div>
</div>

  <div>
  <div class = "myshops-title">My shops</div>
    <% @shops.each do |shop| %>
    <div class ="shop-card">
      <div class = "shop">
      <img src="<%= shop.cover_url.to_s %>" style="width:200px;height:200px"></div>
      <div><%= shop.id %></div>
      <div><%= shop.shop_name %></div>
        <div class="actions">
         <%= link_to("Show", {:action => 'show', :controller => '/shops', :id => shop.id}, :class => 'actionshow') %>
        </div>
    </div>
    <% end %>
    </div>

<div class = "followed-shops">
    <div class = "myshops-title">My followed shops</div>
   <!-- followed shops  -->
   <% @followed_shops.each do |shop| %>
