<% if !flash[:notice].blank? %>
  <div class = "notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= link_to("<< Back to List", {:action => 'index'}) %>

<div>
<h2>Create Shop</h2>

<%= form_for(:shop, :url => {:action => 'create'}) do |f| %>

	<table> 
	<tr>
		<th>Shop Name</th>
		<td><%= f.text_field(:shop_name) %></td>
	</tr>
	<tr>
		<th>Shop Description</th>
		<td><%= f.text_field(:shop_desc) %></td>
	</tr>
	</table>

	<div>
		<%= submit_tag("Create Shop") %>
	</div>

	<% end %>
</div>